{
    "expo": {
        "name": "BLE Broadcast Tower",
        "slug": "ble-advertiser",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "dark",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#1e293b"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.broadcastai.bleadvertiser",
            "infoPlist": {
                "NSBluetoothAlwaysUsageDescription": "This app broadcasts AI state via BLE for demo purposes",
                "NSBluetoothPeripheralUsageDescription": "This app acts as a BLE peripheral to broadcast AI configurations"
            }
        },
        "android": {
            "minSdkVersion": 24,
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#1e293b"
            },
            "package": "com.broadcastai.bleadvertiser",
            "permissions": [
                "android.permission.BLUETOOTH",
                "android.permission.BLUETOOTH_ADMIN",
                "android.permission.BLUETOOTH_CONNECT",
                "android.permission.BLUETOOTH_ADVERTISE",
                "android.permission.ACCESS_FINE_LOCATION"
            ]
        }
    }
}